<view class="">
    <home bind:switchtab="switchTab" wx:if="{{currentTab=='home'}}"></home>
    <jobs wx:if="{{currentTab=='jobs'}}"></jobs>
    <campus wx:if="{{currentTab=='campus'}}"></campus>
    <about wx:if="{{currentTab=='about'}}"></about>
    <view class="padding-left padding-right cu-bar bg-white shadow foot" style="display:flex;height: 50px;">
        <view bindtap="onTabSelect" class="{{currentTab==item.id?'round':''}} flex padding-top-sm padding-bottom-sm" data-tabid="{{item.id}}" style="background:{{currentTab==item.id?item.color:white}}; align-items:center;justify-content:center;text-align:center;transition: width 0.5s;width:{{currentTab==item.id?tabWidth*1.8:tabWidth}}px;height:70%" wx:for="{{tabs}}">
            <image src="{{item.icon}}" style="width:40rpx;height:40rpx"></image>
            <view class="text-bold margin-left-sm text-black" hidden="{{currentTab!=item.id}}" style="white-space: nowrap;overflow:hidden; text-overflow:ellipsis">{{item.title}}</view>
        </view>
    </view>
</view>
